<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.notfound.crm.sys.mapper.RoleMapper">
    <resultMap id="BaseResultMap" type="com.notfound.crm.sys.vo.RoleVO">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="sn" jdbcType="VARCHAR" property="sn" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <collection select="com.notfound.crm.sys.mapper.EmployeeMapper.queryByRoleId" column="name" property="employeeList"/>
    </resultMap>

    <select id="selectList" resultMap="BaseResultMap">
        select id,name,sn,permission
        from role
    </select>

    <select id="selectOne" resultMap="BaseResultMap">
        select id,name,sn,permission
        from role
        where id=#{id,jdbcType=INTEGER}
    </select>

    <select id="queryByPermissions" resultMap="BaseResultMap">
        select id,name,sn,permission
        from role
        where permission=#{permissions.name}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into role(name,sn,permission) values (#{name},#{sn},#{permission.name})
    </insert>

    <delete id="delete" parameterType="java.lang.Integer">
        delete from role where id=#{id}
    </delete>

    <update id="update" parameterType="com.notfound.crm.sys.domain.Role">
        update role
        <set>
            <if test="name != null &amp;&amp; name != '' ">
                name=#{name},
            </if>
            <if test="sn != null &amp;&amp; sn != '' ">
                sn=#{sn},
            </if>
            <if test="permission.name != null &amp;&amp; permission.name != '' ">
                permission=#{permission.name}
            </if>
        </set>
        where id=#{id}
    </update>
</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.notfound.crm.sys.mapper.RoleMapper">
    <resultMap id="BaseResultMap" type="com.notfound.crm.sys.vo.RoleVO">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="sn" jdbcType="VARCHAR" property="sn" />
        <result column="name" jdbcType="VARCHAR" property="name" />
<!--        <result column="p_id" jdbcType="VARCHAR" property="permission.id" />-->
<!--        <result column="p_name" jdbcType="VARCHAR" property="permission.name" />-->
<!--        <result column="p_expression" jdbcType="VARCHAR" property="permission.expression" />-->
        <association columnPrefix="p_" property="permissions">
            <result column="id" property="id"/>
            <result column="name" property="name"/>
            <result column="expression" property="expression"/>
        </association>
    </resultMap>

    <select id="selectList" resultMap="BaseResultMap">
        select r.id,r.name,r.sn,r.permission,p.id as p_id,p.name as p_name,p.expression as p_expression
        from role as r join permissions as p on r.permission=p.name
    </select>

    <select id="selectOne" resultMap="BaseResultMap">
        select r.id,r.name,r.sn,r.permission,p.id as p_id,p.name as p_name,p.expression as p_expression
        from role as r join permissions as p on r.permission=p.name
        where r.id=#{id,jdbcType=INTEGER}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into role(name,sn,permission) values (#{name},#{sn},#{permission.name})
    </insert>

    <delete id="delete" parameterType="java.lang.Integer">
        delete from role where id=#{id}
    </delete>

    <update id="update" parameterType="com.notfound.crm.sys.domain.Role">
        update role
        <set>
            <if test="name != null &amp;&amp; name != '' ">
                name=#{name},
            </if>
            <if test="sn != null &amp;&amp; sn != '' ">
                sn=#{sn},
            </if>
            <if test="permission.name != null &amp;&amp; permission.name != '' ">
                permission=#{permission.name}
            </if>
        </set>
        where id=#{id}
    </update>
</mapper>